<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sideMessageColor"
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:background="@color/black"
            android:layout_weight="1"
            />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mInfoLayout"
        android:background="@color/grey"
        android:layout_toRightOf="@+id/sideMessageColor"
        >

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_sender_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/android_vector" />


            <TextView
                android:id="@+id/item_tv_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_sender_image"
                android:textSize="12dp"
                android:textColor="@color/design_default_color_primary_dark"
                android:text="Name" />

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="12dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:text="time" />

    </RelativeLayout>

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/item_tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sideMessageColor"
            android:layout_below="@+id/mInfoLayout"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Message" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>