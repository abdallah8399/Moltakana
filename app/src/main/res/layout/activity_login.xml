<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700px"
    android:id="@+id/Rlayout"
    android:background="@drawable/input_design"
    tools:context=".Activities.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_pop"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF8B00"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="عضو" />

        <Button
            android:id="@+id/btnVisitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#FF8B00"
            android:textSize="20dp"
            android:text="زائر" />

        <Button
            android:id="@+id/btnMosgal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="#FF8B00"
            android:textSize="20dp"
            android:text="مسجل" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pop"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="#E6E2DD">

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_design"
            android:ems="10"
            android:gravity="center"
            android:hint="اسم الزائر"
            android:inputType="textPersonName"
            android:textColorHint="@color/design_default_color_on_secondary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/etUsername"
            android:background="@drawable/input_design"
            android:ems="10"
            android:gravity="center"
            android:hint="كلمة السر"
            android:inputType="numberPassword"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/etUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/input_design"
            android:text="  تسجيل الدخول  "
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="20sp" />


    </RelativeLayout>



</RelativeLayout>